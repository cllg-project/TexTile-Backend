# Example environment variables for production
# Copy this file to `.env.production` and update values before deploying.

# cache
#PRERENDER_DIR=/var/cache/app
USE_DISK_CACHE=true

# Application Configuration
USE_ELASTICSEARCH=true

# Elasticsearch Configuration
# Use http(s)://host:port - set to your production cluster
ELASTICSEARCH_HOST=https://es.example.com:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
ELASTICSEARCH_INDEX=documents_v5
ELASTICSEARCH_VERIFY_CERTS=true

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false

# Vector Search Configuration (when available)
VECTOR_SEARCH_MODEL=paraphrase-multilingual-MiniLM-L12-v2
VECTOR_INDEX=documents_with_vectors
