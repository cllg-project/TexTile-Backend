# Example environment variables for development
# Copy this file to `.env` and update values as needed.

# cache
#PRERENDER_DIR=/path/to/cache
USE_DISK_CACHE=true

# Application Configuration
USE_ELASTICSEARCH=true

# Elasticsearch Configuration
# Use http(s)://host:port
ELASTICSEARCH_HOST=https://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX=documents_v5
ELASTICSEARCH_VERIFY_CERTS=false

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true

# CORS allowed origins (comma-separated)
# Example: ALLOWED_ORIGINS=http://localhost:3000,http://comma.inria.fr
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Vector Search Configuration (when available)
VECTOR_SEARCH_MODEL=paraphrase-multilingual-MiniLM-L12-v2
VECTOR_INDEX=documents_with_vectors
